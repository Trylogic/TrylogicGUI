<?xml version="1.0"?>
<skins:Skin xmlns:fx="http://ns.adobe.com/mxml/2009"
			xmlns:s="library://ns.adobe.com/flex/spark"
			xmlns:skins="ru.trylogic.gui.skins.*"
			xmlns:buttons="ru.trylogic.gui.components.button.*">

	<fx:Metadata>
		[HostComponent("ru.trylogic.gui.components.checkBox.CheckBox")]
	</fx:Metadata>

	<skins:states>
		<s:State id="uncheckedState" name="unchecked"/>
		<s:State id="checkedState" name="checked"/>
	</skins:states>

	<buttons:Button id="checkButton" skinStyle.checked="{hostComponent.skinStyle.checkedButtonSkinStyle}" skinStyle.unchecked="{hostComponent.skinStyle.uncheckedButtonSkinStyle}" text="{hostComponent.label}"/>
</skins:Skin>
